@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <i class="flaticon-paperclip"></i>
                    <h4 class="box-title text-center">Source Code</h4>
                </div>
                <div class="box-body">
                    <textarea class="form-control textarea" id="SourceCode" name="SourceCode" rows="@ViewBag.Line" style="min-width: calc(100% - 60px);">@ViewBag.Code</textarea>
                </div><!-- /.box-body-->
                <div class="box-footer text-right">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-refresh"></i> Process</button>
                </div>
            </div><!-- /.box -->
        </div>
    </div>
}
@if (ViewBag.Parse != null)
{
    if (ViewBag.Parse == "true")
    {
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <i class="flaticon-paperclip"></i>
                        <h4 class="box-title text-center">Instrumented Source Code</h4>
                    </div>
                    <div class="box-body">
                        <textarea class="form-control textarea" readonly rows="@ViewBag.LineResult" style="min-width: calc(100% - 60px); cursor: text;">@ViewBag.InstrumentedCode</textarea>
                    </div><!-- /.box-body-->
                </div><!-- /.box -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <i class="flaticon-paperclip"></i>
                        <h4 class="box-title text-center">Control Flow Graph</h4>
                    </div>
                    <div class="box-body">
                        <img src="@ViewBag.CFG" />
                    <br />
                        <hr />
                        <br />
                        <div class="row">
                            <div class="col-md-8">
                                <div class="alert alert-warning">
                                    <h4 class="box-title"><i class="glyphicon glyphicon-info-sign"></i><b> Information</b></h4>
                                    <p>@Html.Raw(ViewBag.Keterangan)</p>
                                </div><!-- /.box -->
                            </div>
                            <div class="col-md-4">
                                <div class="alert alert-success">
                                    <h4 class="box-title"><i class="glyphicon glyphicon-list"></i><b> Path</b></h4>
                                    <ul>
                                        @foreach (string item in ViewBag.ListOfPath)
                                        {
                                            <li>@item</li>
                                        }
                                    </ul>
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div><!-- /.box-body-->
                </div><!-- /.box -->
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <p>@Html.Raw(ViewBag.Parse)</p>
        </div>
    }
}
<script>
    $(function () {
        // Target a single one
        $(".textarea").linedtextarea();

    });
</script>
